<p id="notice"><%= notice %></p>

<p>
  <strong>Hash rate:</strong>
  <%= @order.hash_rate %>
</p>

<p>
  <strong>Price:</strong>
  <%= @order.price %>
</p>

<p>
  <strong>User:</strong>
  <%= @order.user_id %>
</p>

<p>
  <strong>Confirmed at:</strong>
  <%= @order.confirmed_at %>
</p>

<p>
  <strong>Confirmed by user:</strong>
  <%= @order.confirmed_by_user_id %>
</p>

<p>
  <strong>Slip image:</strong>
  <%= cl_image_tag @order.slip_image if @order.slip_image.present? %>
</p>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>

<% if current_user.admin? %>
  <p>
    <strong>Confirm This order:</strong>
    <%= link_to 'Confirm', confirm_order_path(@order), method: :post %>
  </p>
<% end %>
