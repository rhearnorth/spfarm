<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Hash rate</th>
      <th>Price</th>
      <th>Contract Long (months)</th>
      <th>User</th>
      <th>Confirmed at</th>
      <th>Confirmed by user</th>
      <th>Slip image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.hash_rate %></td>
        <td><%= order.price %></td>
        <td><%= order.contract_long %></td>
        <td><%= order.user_id %></td>
        <td><%= order.confirmed_at %></td>
        <td><%= order.confirmed_by_user_id %></td>
        <td><%= order.slip_image %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

