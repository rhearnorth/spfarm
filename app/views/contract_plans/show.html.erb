<p id="notice"><%= notice %></p>

<h2>Contract Confirmation</h2>

<div class="summary-group row">
  <div class="col-12 col-md-4">
    <div class="statcard p-3 box">
      <span class="statcard-desc">Hash rate</span>
      <h3 class="statcard-number"><%= @contract_plan.hash_rate %></h3>
    </div>
  </div>
  <div class="col-12 col-md-4">
    <div class="statcard p-3 box">
      <span class="statcard-desc">Price</span>
      <h3 class="statcard-number"><%= @contract_plan.price %></h3>
    </div>
  </div>
  <div class="col-12 col-md-4">
    <div class="statcard p-3 box">
      <span class="statcard-desc">Contract Long</span>
      <h3 class="statcard-number"><%= @contract_plan.contract_long %></h3>
    </div>
  </div>
</div>
 
<%= link_to 'Buy', orders_path(contract_plan_id: @contract_plan), method: :post, data: { confirm: "Are you sure?" }, :class => "btn btn-primary"%> 
<%= link_to 'Edit', edit_contract_plan_path(@contract_plan), :class => "btn btn-secondary" %> 
<%= link_to 'Back', contract_plans_path, :class => "btn btn-secondary" %>
