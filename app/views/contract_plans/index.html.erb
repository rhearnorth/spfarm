<p id="notice"><%= notice %></p>

<h1>Contract Plans</h1>

<table>
  <thead>
    <tr>
      <th>Hash rate</th>
      <th>Price</th>
      <th>Contract long</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contract_plans.each do |contract_plan| %>
      <tr>
        <td><%= contract_plan.hash_rate %></td>
        <td><%= contract_plan.price %></td>
        <td><%= contract_plan.contract_long %></td>
        <td><%= link_to 'Show', contract_plan %></td>
        <td><%= link_to 'Edit', edit_contract_plan_path(contract_plan) %></td>
        <td><%= link_to 'Destroy', contract_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contract Plan', new_contract_plan_path %>
